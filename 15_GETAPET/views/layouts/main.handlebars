    <title>Ipet</title>
    <link rel="shortcut icon" href="/img/pets.png" type="image/x-icon">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav id="navbar">
        <a href="/" id="logo">
            <img src="/img/lamp.png" alt="Thoughts">
        </a>
        <p ><strong style="font-size: 50px;">I</strong>pet 🐾</p>       
        <ul>
            <li><a href="/" style="color: goldenrod;">Comunidade</a></li>
            {{#if session.userId}}
                <li><a href="/thoughts/friends" style="color: goldenrod; font-size: 24px;"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="goldenrod" class="bi bi-chat-dots" viewBox="0 0 16 16">
