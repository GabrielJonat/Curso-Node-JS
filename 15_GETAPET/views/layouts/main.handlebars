               <li><a href="/logout" style="color: goldenrod;"><svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="goldenrod" class="bi bi-power" viewBox="0 0 16 16">
                    <path d="M7.5 1v7h1V1z"/>
                    <path d="M3 8.812a5 5 0 0 1 2.578-4.375l-.485-.874A6 6 0 1 0 11 3.616l-.501.865A5 5 0 1 1 3 8.812"/>
                    </svg></a></li>
                {{else}}
               
                <li><a href="/login" style="color: goldenrod;">Entrar</a></li>
                <li><a href="/register" style="color: goldenrod;">Registrar</a></li>

            {{/if}}            
            
        </ul>
    </nav>

    <div class="container">

        {{#if messages.message}}
           <div class="message">
                 {{messages.message}}
           </div>
        {{/if}}
        {{{body}}}
    </div>
    
    <footer>
        <p><span>Thoughts</span>&copy; 2024</p>
    </footer>
</body>
</html>