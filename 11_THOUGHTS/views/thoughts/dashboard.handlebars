<div class="dashboard">

    <div class="title-container">

        <h2>Dashboard</h2>
        <a href="/thoughts/add" class="btn">Criar pensamento</a>

    </div>
    {{#if empty}}
        <h3>Você ainda não criou nenhum pensamento</h3>
    {{else}}
        <h3>Seus Pensamentos {{user.name}}:</h3>
        <ul>
            {{#each thoughts}}
            <li>
                <span class="label">
                    {{this.title}}
                </span>
                <span class="actions">
                    <a href="/thoughts/edit/{{this.id}}" class="btn">Editar</a>
                    <form action="/thoughts/delete/{{this.id}}" method="post">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                </span>
            </li>
            {{/each}}
        </ul>
    {{/if}}
</div>